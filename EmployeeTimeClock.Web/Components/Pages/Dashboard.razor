@code {
    private bool isAuthenticated;
    private int userId;
    private string? displayName;
    private string? userRole;
    private bool isAdmin;

    private bool isClockedIn;
    private string statusText = "Loading...";
    private string? message;
    private string? error;
    private bool showClockOutConfirm = false;
    private DateTime clockInTime;

    // History data
    private IReadOnlyList<TimeEntry>? todayEntries;
    private IReadOnlyList<TimeEntry>? weekEntries;
    private int todayTotalMinutes => todayEntries?.Sum(e => e.DurationMinutes) ?? 0;
    private int weekTotalMinutes => weekEntries?.Sum(e => e.DurationMinutes) ?? 0;

    // Admin data
    private List<(UserAccount user, TimeEntry entry)>? clockedInUsers;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            isAuthenticated = user.Identity?.IsAuthenticated ?? false;

            if (!isAuthenticated)
                return;

            // Extract user info from claims
            displayName = user.FindFirst("DisplayName")?.Value ?? user.Identity?.Name ?? "User";
            userRole = user.FindFirst(ClaimTypes.Role)?.Value ?? "Employee";
            isAdmin = userRole?.Equals("Admin", StringComparison.OrdinalIgnoreCase) ?? false;
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            userId = int.TryParse(userIdClaim, out var id) ? id : 0;

            await RefreshStatus();
            await LoadHistory();

            if (isAdmin)
            {
                await LoadClockedInUsers();
            }
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }

    private async Task RefreshStatus()
    {
        isClockedIn = await Clock.IsClockedInAsync(userId);

        if (isClockedIn)
        {
            var open = await Clock.GetOpenEntryAsync(userId);
            if (open is not null)
            {
                clockInTime = open.ClockIn;
                statusText = $"Clocked in since {open.ClockIn:g}";
            }
            else
            {
                statusText = "Clocked In (duration unknown)";
            }
        }
        else
        {
            statusText = "Ready to clock in";
        }
    }

    private async Task LoadHistory()
    {
        var today = DateTime.Today;
        var weekStart = today.AddDays(-(int)today.DayOfWeek); // Sunday
        var tomorrow = today.AddDays(1);

        todayEntries = await Clock.GetEntriesAsync(userId, today, tomorrow);
        weekEntries = await Clock.GetEntriesAsync(userId, weekStart, tomorrow);
    }

    private async Task LoadClockedInUsers()
    {
        var allUsers = await AuthService.GetAllUsersAsync();
        var result = new List<(UserAccount, TimeEntry)>();

        foreach (var user in allUsers)
        {
            var openEntry = await Clock.GetOpenEntryAsync(user.Id);
            if (openEntry != null)
            {
                result.Add((user, openEntry));
            }
        }

        clockedInUsers = result.OrderBy(x => x.Item2.ClockIn).ToList();
    }

    private string FormatDuration(int totalMinutes)
    {
        var hours = totalMinutes / 60;
        var minutes = totalMinutes % 60;
        return $"{hours}h {minutes:D2}m";
    }

    private async Task OnClockIn()
    {
        message = null;
        try
        {
            await Clock.ClockInAsync(userId, DateTime.Now);
            message = "✅ You have been clocked in successfully.";
            await RefreshStatus();
            await LoadHistory();
        }
        catch (Exception ex)
        {
            message = $"❌ Clock in failed: {ex.Message}";
        }
    }

    private void RequestClockOut()
    {
        showClockOutConfirm = true;
    }

    private async Task OnClockOutConfirmed()
    {
        showClockOutConfirm = false;
        message = null;

        try
        {
            var closed = await Clock.ClockOutAsync(userId, DateTime.Now);
            var hours = closed.DurationMinutes / 60;
            var minutes = closed.DurationMinutes % 60;
            message = $"✅ Clocked out successfully. Duration: {hours}h {minutes}m";
            await RefreshStatus();
            await LoadHistory();
        }
        catch (Exception ex)
        {
            message = $"❌ Clock out failed: {ex.Message}";
        }
    }

    private void OnClockOutCancelled()
    {
        showClockOutConfirm = false;
    }

    private string elapsedTime
    {
        get
        {
            if (clockInTime == default) return "calculating...";
            var elapsed = DateTime.Now - clockInTime;
            var hours = (int)elapsed.TotalHours;
            var minutes = elapsed.Minutes;
            if (hours == 0) return $"{minutes}m";
            return $"{hours}h {minutes}m";
        }
    }
}
