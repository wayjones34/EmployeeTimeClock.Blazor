@page "/dashboard"
@rendermode InteractiveServer
@implements IDisposable
@using EmployeeTimeClock.Web.Ports
@using EmployeeTimeClock.Web.Domain.Entities
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject ITimeClockService Clock
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<div class="dashboard-container">
    <h2>Dashboard</h2>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>Error:</strong> @error
            <button type="button" class="btn-close" @onclick="() => error = null"></button>
        </div>
        <a href="/login" class="btn btn-secondary">Go to Login</a>
    }
    else if (!isAuthenticated)
    {
        <div class="alert alert-warning">
            You are not logged in. Please log in to access the dashboard.
        </div>
        <a href="/login" class="btn btn-primary">Go to Login</a>
    }
    else
    {
        <div class="welcome-section">
            <div>
                <p><strong>Welcome back, @displayName!</strong></p>
                <p style="color: rgba(255,255,255,0.8); font-size: 0.95em;">Role: @userRole</p>
            </div>
            <div>
                <a href="/api/logout" class="btn btn-outline-light btn-sm">Logout</a>
            </div>
        </div>

        <div class="clock-section">
            <div class="status-card @(isClockedIn ? "status-card-active" : "")">
                <h4>Clock Status</h4>
                <div class="status-display">
                    <div class="status-badge @(isClockedIn ? "clocked-in" : "clocked-out")">
                        @if (isClockedIn)
                        {
                            <span class="status-dot"></span>
                            <span>Clocked In</span>
                        }
                        else
                        {
                            <span>Clocked Out</span>
                        }
                    </div>

                    @if (isClockedIn)
                    {
                        <div class="elapsed-timer">
                            <span class="timer-label">Elapsed:</span>
                            <span class="timer-value">@liveElapsedTime</span>
                        </div>
                    }

                    <p class="status-time">@statusText</p>
                </div>

                <div class="clock-actions">
                    <button class="btn btn-success btn-lg" disabled="@isClockedIn" @onclick="OnClockIn">
                        <span class="oi oi-media-play"></span> Clock In
                    </button>
                    <button class="btn btn-danger btn-lg" disabled="@(!isClockedIn)" @onclick="RequestClockOut">
                        <span class="oi oi-media-stop"></span> Clock Out
                    </button>
                </div>
            </div>
        </div>

        @* Toast Notification Container *@
        @if (toasts.Count > 0)
        {
            <div class="toast-container">
                @foreach (var toast in toasts)
                {
                    <div class="toast-notification @toast.Type @(toast.IsExiting ? "toast-exit" : "")">
                        <span class="toast-icon">@toast.Icon</span>
                        <span class="toast-message">@toast.Message</span>
                        <button class="toast-close" @onclick="() => DismissToast(toast.Id)">&times;</button>
                    </div>
                }
            </div>
        }

        @* Today's History Panel *@
        <div class="history-section">
            <div class="history-card">
                <div class="history-header">
                    <h4>📅 Today's Time Entries</h4>
                    <span class="total-badge">Total: @FormatDuration(todayTotalMinutes)</span>
                </div>

                @if (todayEntries == null || todayEntries.Count == 0)
                {
                    <p class="no-entries">No entries for today yet.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Clock In</th>
                                    <th>Clock Out</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in todayEntries)
                                {
                                    <tr>
                                        <td>@entry.ClockIn.ToString("t")</td>
                                        <td>@(entry.ClockOut?.ToString("t") ?? "—")</td>
                                        <td>
                                            @if (entry.ClockOut.HasValue)
                                            {
                                                @FormatDuration(entry.DurationMinutes)
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <div class="history-card">
                <div class="history-header">
                    <h4>📊 This Week</h4>
                    <span class="total-badge">Total: @FormatDuration(weekTotalMinutes)</span>
                </div>

                @if (weekEntries == null || weekEntries.Count == 0)
                {
                    <p class="no-entries">No entries this week yet.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Clock In</th>
                                    <th>Clock Out</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var entry in weekEntries)
                                {
                                    <tr>
                                        <td>@entry.ClockIn.ToString("ddd M/d")</td>
                                        <td>@entry.ClockIn.ToString("t")</td>
                                        <td>@(entry.ClockOut?.ToString("t") ?? "—")</td>
                                        <td>
                                            @if (entry.ClockOut.HasValue)
                                            {
                                                @FormatDuration(entry.DurationMinutes)
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>

        @* Admin Section - Only visible to Admin role *@
        @if (isAdmin)
        {
            <div class="admin-section">
                <h4>👥 Admin: Who's Clocked In Now</h4>

                @if (clockedInUsers == null)
                {
                    <p>Loading...</p>
                }
                else if (clockedInUsers.Count == 0)
                {
                    <p class="no-entries">No employees are currently clocked in.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Employee</th>
                                    <th>Clocked In At</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var (user, entry) in clockedInUsers)
                                {
                                    <tr>
                                        <td><strong>@user.DisplayName</strong></td>
                                        <td>@entry.ClockIn.ToString("t")</td>
                                        <td>@FormatDuration((int)(DateTime.Now - entry.ClockIn).TotalMinutes)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <a href="/admin" class="btn btn-outline-primary btn-sm mt-2">Go to Admin Console →</a>
            </div>
        }

        <ConfirmDialog
            IsVisible="@showClockOutConfirm"
            Title="Confirm Clock Out"
            Message="Are you sure you want to clock out?"
            Details="@($"Clocked in since: {clockInTime:t} ({elapsedTime} elapsed)")"
            ConfirmText="Clock Out"
            CancelText="Cancel"
            OnConfirmCallback="OnClockOutConfirmed"
            OnCancelCallback="OnClockOutCancelled" />
    }
</div>

