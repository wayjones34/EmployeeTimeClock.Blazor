@using EmployeeTimeClock.Web.State
@using EmployeeTimeClock.Web.Ports

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EmployeeTimeClock</a>
        @if (Session.IsLoggedIn)
        {
            <div class="ms-auto d-flex align-items-center gap-3">
                <span class="navbar-text" style="font-size: 0.95em;">
                    <span class="badge bg-success me-2">● Logged In</span>
                    @Session.CurrentUser?.DisplayName
                </span>
                <button class="btn btn-sm btn-outline-light" @onclick="OnLogout" style="padding: 0.25rem 0.5rem; font-size: 0.9em;">
                    Logout
                </button>
            </div>
        }
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (!Session.IsLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="oi oi-account-login" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <span class="oi oi-clock" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="reports">
                    <span class="oi oi-list" aria-hidden="true"></span> Reports
                </NavLink>
            </div>

            @if (Session.IsAdmin)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin">
                        <span class="oi oi-lock-locked" aria-hidden="true"></span> Admin
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {
    [Inject]
    public required SessionState Session { get; set; }

    [Inject]
    public required NavigationManager Nav { get; set; }

    [Inject]
    public required IAuthService Auth { get; set; }

    private async Task OnLogout()
    {
        await Auth.LogoutAsync();
        Session.Logout();
        Nav.NavigateTo("/login", replace: true);
    }
}
